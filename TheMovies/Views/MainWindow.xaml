<Window
    x:Class="TheMovies.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheMovies"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Selvangivelsessystem"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="RegExpense_Button"
            Width="160"
            Margin="0,54,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="RegExpense_Button_Click"
            Content="Udgifter" />
        <Button
            x:Name="RegIncome_Button"
            Width="160"
            Margin="0,134,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="RegIncome_Button_Click"
            Content="Indtægter" />
        <Button
            x:Name="CalcTax_Button"
            Width="160"
            Margin="0,214,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Beregn skat" />
        <Button
            x:Name="GenAnnualReport_Button"
            Width="160"
            Margin="0,294,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Generer årsrapport" />

    </Grid>
</Window>
