<Window
    x:Class="TheMovies.Views.RegIncomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Registrer ny indtægt"
    Width="900"
    Height="520">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="220" />
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left: toolbar + list of incomes  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ToolBar
                Grid.Row="0"
                Padding="0"
                HorizontalAlignment="Left">
                <Button
                    Width="72"
                    Command="{Binding Path=NewIncomeCommand}"
                    CommandParameter="{Binding}"
                    Content="Ny" />
                <Button
                    Width="80"
                    Margin="6,0,0,0"
                    Command="{Binding Path=DeleteIncomeCommand}"
                    CommandParameter="{Binding}"
                    Content="Slet" />
            </ToolBar>

            <ListBox
                x:Name="IncomeListBox"
                Grid.Row="1"
                Margin="0,8,0,0"
                ItemsSource="{Binding IncomeVM}"
                SelectedItem="{Binding SelectedIncome, UpdateSourceTrigger=PropertyChanged}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="4" Orientation="Horizontal">
                            <TextBlock Width="110" Text="{Binding Date, StringFormat=d}" />
                            <TextBlock
                                Width="80"
                                Margin="8,0,0,0"
                                Text="{Binding IncAmount}" />
                            <TextBlock Margin="8,0,0,0" Text="{Binding Service}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <!--  Right: details / editor bound to SelectedIncome  -->
        <Border
            Grid.Column="2"
            Padding="12"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel MaxWidth="520">
                <TextBlock
                    Margin="0,0,0,8"
                    FontWeight="Bold"
                    Text="Detaljer om indtægt" />

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Initialer</TextBlock>
                    <TextBox
                        Width="203"
                        Background="{Binding SelectedIncome.InitialsBackground, Mode=TwoWay}"
                        Text="{Binding SelectedIncome.Initials, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Dato</TextBlock>

                    <!--  DatePicker with local watermark style  -->
                    <DatePicker
                        x:Name="IncomeDatePicker"
                        Width="203"
                        Height="21"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{Binding DateBackground, Mode=TwoWay}"
                        Focusable="False"
                        IsTabStop="False"
                        SelectedDate="{Binding SelectedIncome.Date, Mode=TwoWay}">

                        <DatePicker.Resources>
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                            <Grid>
                                                <ScrollViewer
                                                    x:Name="PART_ContentHost"
                                                    HorizontalScrollBarVisibility="Hidden"
                                                    VerticalScrollBarVisibility="Hidden" />
                                                <TextBlock
                                                    x:Name="PART_Watermark"
                                                    Margin="3,0,0,0"
                                                    Focusable="False"
                                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                    IsHitTestVisible="False"
                                                    Text="Vælg en dato"
                                                    Visibility="Collapsed" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Null}">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>

                    </DatePicker>
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Beløb</TextBlock>
                    <TextBox
                        Width="203"
                        Background="{Binding SelectedIncome.IncAmountBackground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Text="{Binding SelectedIncome.IncAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Top">Ydelse</TextBlock>
                    <TextBox
                        Width="320"
                        Height="60"
                        AcceptsReturn="True"
                        Text="{Binding SelectedIncome.Service, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Betalingsstatus</TextBlock>
                    <ComboBox
                        Width="203"
                        Height="21"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Background="White"
                        BorderBrush="DarkGray"
                        DisplayMemberPath="Value"
                        ItemsSource="{Binding PaymentStatusOptions}"
                        SelectedValue="{Binding SelectedIncome.PaymentStatus, Mode=TwoWay}"
                        SelectedValuePath="Key"
                        Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}" />
                </StackPanel>

                <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                    <Button
                        Width="90"
                        Command="{Binding Path=SaveIncomeCommand}"
                        CommandParameter="{Binding}"
                        Content="Gem" />
                    <Button
                        Width="90"
                        Margin="8,0,0,0"
                        Command="{Binding CancelEditCommand}"
                        Content="Fortryd" />
                </StackPanel>

                <TextBlock
                    Margin="0,8,0,0"
                    Foreground="Gray"
                    Text="Vælg en indtægt i venstre liste for at redigere, eller klik Ny for at oprette en ny indtægt." />
            </StackPanel>
        </Border>
    </Grid>
</Window>