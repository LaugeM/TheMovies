<Window
    x:Class="TheMovies.Views.ExpenseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Udgifter"
    Width="900"
    Height="520">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="220" />
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left: toolbar + list  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ToolBar
                Grid.Row="0"
                Padding="0"
                HorizontalAlignment="Left">
                <Button
                    Width="72"
                    Command="{Binding Path=NewExpenseCommand, UpdateSourceTrigger=PropertyChanged}"
                    CommandParameter="{Binding}"
                    Content="Ny" />
                <Button
                    Width="80"
                    Margin="6,0,0,0"
                    Command="{Binding Path=DeleteExpenseCommand, UpdateSourceTrigger=PropertyChanged}"
                    CommandParameter="{Binding}"
                    Content="Slet" />
            </ToolBar>

            <ListBox
                x:Name="ExpenseListBox"
                Grid.Row="1"
                Margin="0,8,0,0"
                ItemsSource="{Binding ExpenseVM}"
                SelectedItem="{Binding SelectedExpense, UpdateSourceTrigger=PropertyChanged}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="4" Orientation="Horizontal">
                            <TextBlock Width="110" Text="{Binding Date, StringFormat=d}" />
                            <TextBlock
                                Width="80"
                                Margin="8,0,0,0"
                                Text="{Binding ExpAmount}" />
                            <TextBlock Margin="8,0,0,0" Text="{Binding Note}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="6"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <!--  Right: details / editor bound to SelectedExpense  -->
        <Border
            Grid.Column="2"
            Padding="12"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel MaxWidth="520">
                <TextBlock
                    Margin="0,0,0,8"
                    FontWeight="Bold"
                    Text="Detaljer om udgift" />

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Dato</TextBlock>

                    <!--  DatePicker med LOKAL stil til watermark "Vælg en dato"  -->
                    <DatePicker
                        x:Name="ExpenseDatePicker"
                        Width="203"
                        Height="21"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{Binding DateBackground, Mode=TwoWay}"
                        Focusable="False"
                        IsTabStop="False"
                        SelectedDate="{Binding SelectedExpense.Date, Mode=TwoWay}">

                        <DatePicker.Resources>
                            <!--  Implicit stil: gælder kun for DatePickerTextBox inde i DENNE DatePicker  -->
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                            <Grid>
                                                <!--  Normal tekst / indhold  -->
                                                <ScrollViewer
                                                    x:Name="PART_ContentHost"
                                                    HorizontalScrollBarVisibility="Hidden"
                                                    VerticalScrollBarVisibility="Hidden" />

                                                <!--  Watermark overlay  -->
                                                <TextBlock
                                                    x:Name="PART_Watermark"
                                                    Margin="3,0,0,0"
                                                    Focusable="False"
                                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                    IsHitTestVisible="False"
                                                    Text="Vælg en dato"
                                                    Visibility="Collapsed" />
                                            </Grid>

                                            <!--  Hvornår watermarket vises/skjules  -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Null}">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="PART_Watermark" Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>

                    </DatePicker>
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Center">Beløb</TextBlock>
                    <TextBox
                        Width="203"
                        Background="{Binding SelectedExpense.ExpAmountBackground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Text="{Binding SelectedExpense.ExpAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Margin="0,6" Orientation="Horizontal">
                    <TextBlock Width="90" VerticalAlignment="Top">Note</TextBlock>
                    <TextBox
                        Width="320"
                        Height="90"
                        AcceptsReturn="True"
                        Background="{Binding SelectedExpense.NoteBackground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Text="{Binding SelectedExpense.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                    <Button
                        Width="90"
                        Command="{Binding Path=SaveExpenseCommand}"
                        CommandParameter="{Binding}"
                        Content="Gem" />
                    <Button
                        Width="90"
                        Margin="8,0,0,0"
                        Command="{Binding CancelEditCommand}"
                        Content="Fortryd" />
                </StackPanel>

                <TextBlock
                    Margin="0,8,0,0"
                    Foreground="Gray"
                    Text="Vælg en udgift der skal redigeres, eller klik på knappen Ny for at oprette en ny udgift." />
            </StackPanel>
        </Border>
    </Grid>
</Window>